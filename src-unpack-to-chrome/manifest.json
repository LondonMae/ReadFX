{
    "manifest_version": 3,
    "name": "ReadFx",
    "version": "1.0",
    "description": "Text summarizer",
    "action": {
        "action":{
            "default_title": "Click to open panel"
        },
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon-16.png"
        }
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
      },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "exclude_matches": ["https://docs.google.com/*", "*://google.com/*"],
            "css": ["content-script/style.css"],
            "js": ["content-script/highlight.js", "content-script/content.js", "content-script/path.js", "content-script/readability.js"],
            "run_at": "document_end"  
        }
    ],
    "side_panel": {
        "default_path" :"sidepanel/sidepanel.html"
    } ,
    "permissions": ["activeTab", "sidePanel", "contextMenus", "scripting", "tabs", "notifications", "scripting", "storage"],
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
    "options_page": "notes/notes.html"
    }
