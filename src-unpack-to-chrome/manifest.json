{
    "manifest_version": 3,
    "name": "ReadFx",
    "version": "1.0",
    "description": "Text summarizer",
    "action": {
        "action":{
            "default_title": "Click to open panel"
        },
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon-16.png"
        }
    },
    "background": {
        "service_worker": "service-worker.js"
      },
    "content_scripts": [{
        "matches": ["https://*/*"],
        "run_at": "document_start",
        "all_frames": true,
        "js": ["content.js"]
    }],
    "side_panel": {
        "default_path" :"sidepanel/sidepanel.html"
    } ,
    "permissions": ["activeTab", "sidePanel", "contextMenus", "scripting", "tabs", "notifications"],
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ]

    }

