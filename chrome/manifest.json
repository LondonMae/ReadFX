{
    "name": "ReadFX",
    "description": "testing woohoo",
    "version": "0.1",

    "action": {
      "default_popup":"hello.html"
    },

    "background": {
      "service_worker": "background.js"
    },
    "action": {},


    "permissions": ["activeTab", "scripting"],
    "host_permissions": [
      "http://127.0.0.1:8000/"
    ],


    "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["scripts/content.js"]
        }
    ],
    "manifest_version": 3
}
